@using WebApplication77.Models;
@model IEnumerable<WebApplication77.Models.UserSystem>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
</head>
<body>
    <a href="/UserSystem/create" class="btn btn-primary"> UserSystem Create </a>
    <div class="container">

        <table class="table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <td> id </td>
                    <td> fullName </td>
                    <td> UserName </td>
                    <td> Email </td>
                    <td> password </td>
                    <td> Edit </td>
                    <td> Delete </td>
                </tr>
            </thead>
              @if (Model.Count() > 0)
              {

            <tbody>
                
                @foreach (UserSystem item in Model)
                {
                <tr>
                    <td> @item.Id </td>
                    <td> @item.FullName </td>
                    <td> @item.UserName </td>
                    <td> @item.Email </td>
                    <td> @item.Password </td>
                    <td> @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn-btn-primary" }) </td>
                    <td> @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn-btn-primary" }) </td>
                </tr>
                }
            </tbody>
              }
              else
              {
                  <tr>
                      <td> Not DataFound</td>
                  </tr>
              }
        </table>
    </div>

</body>
</html>